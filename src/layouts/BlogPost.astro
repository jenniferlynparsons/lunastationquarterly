---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import SideBar from "../components/SideBar.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, heroImage, heroAltText, pubDate, author, authorSlug, postCategory, categorySlug } =
  Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main class="container">
      <div>
        {heroImage && <img width={1020} height={510} src={heroImage} alt={heroAltText} />}
      </div>
      <div>
        <h1>{title}</h1>
        <p><a href={authorSlug}>{author}</a> | <FormattedDate date={pubDate} /></p>
        <slot />
        <p>Posted in <a href={categorySlug}>{postCategory}</a></p>
      </div>
      <!-- TODO: Add prev/next links -->
    </main>
    <SideBar />
    <Footer />
  </body>
</html>
