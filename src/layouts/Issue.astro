---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = CollectionEntry<"issues">["data"];

const { title, description, pubDate, stories, authors } = Astro.props;

const storiesList = stories.map((storyTitle, i) => {
  return `${storyTitle} by ${authors[i]}`;
});
---

<html lang="en">
  <head>
    <BaseHead title={title} />
  </head>

  <body>
    <Header />
    <main class="container">
      <h1>{title}</h1>
      <slot />
      <ul>
        {storiesList.map((story) => <li>{story}</li>)}
      </ul>
    </main>
    <Footer />
  </body>
</html>
