---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  imagePath: string;
  altText: string;
}

const { imagePath, altText } = Astro.props;

const fullImagePath = `/src/assets/hero-images/${imagePath}`;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/hero-images/*.{jpeg,jpg,png,gif}");
console.log(images);
if (!images[fullImagePath])
  throw new Error(`"${fullImagePath}" does not exist in glob: "src/assets/hero-images/*.{jpeg,jpg,png,gif}"`);
---

<Image src={images[fullImagePath]()} alt={altText} />
