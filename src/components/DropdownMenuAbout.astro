---
import DropdownLink from "./DropdownLink.astro";
import NavLink from "./NavLink.astro";
import { Dropdown, DropdownItems } from "astro-navbar";
---

<Dropdown class="group">
    <li class="inline text-center">
      <button class="flex items-center">
        <NavLink href="/about">About LSQ</NavLink>
        <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="3"
            stroke="currentColor"
            class="w-3 h-3 mt-0.5 last:mr-4 group-open:rotate-180">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
        </svg>
      </button>
      <DropdownItems class="relative text-left">
        <div class="sm:absolute static sm:top-0 sm:w-max bg-lsq-white sm:shadow shadow-lsq-gray-light w-full">
          <ul class="flex flex-col justify-center items-center">
            <div class="sm:w-full w-4 h-px bg-lsq-gray-light"></div>
            <DropdownLink href="/about">About LSQ</DropdownLink>
            <div class="sm:w-full w-4 h-px bg-lsq-gray-light"></div>
            <DropdownLink href="/contact-us">Contact Us</DropdownLink>
            <div class="sm:w-full w-4 h-px bg-lsq-gray-light"></div>
            <DropdownLink href="/changes">Recent Changes</DropdownLink>
          </ul>
        </div>
      </DropdownItems>
    </li>
  </Dropdown>