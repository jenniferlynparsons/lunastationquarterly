---
import FormattedDate from "../components/FormattedDate.astro";

const { title, pubDate, volumeNumber } = Astro.props;
---

<div>
  <h1 class="font-sans mb-2">{title}</h1>
  {
    pubDate && (
      <p>
        <FormattedDate date={pubDate} />
        {volumeNumber && (
    <span> | Year {volumeNumber}</span>
  )}
      </p>
    )
  }
  
</div>

<style>
  div::after {
    background: #d24719;
    content: "";
    display: block;
    width: 100px;
    height: 3px;
  }
</style>
