---
import DropdownLink from "./DropdownLink.astro";
import HamburgerMenu from "./HamburgerMenu.astro";
import NavLink from "./NavLink.astro";
import { Astronav, Dropdown, DropdownItems, MenuItems } from "astro-navbar";
---

<Astronav>
  <HamburgerMenu />
  <navbar id="site-navigation" class="main-navigation sm:block hidden" role="navigation">
    <MenuItems>
      <ul class="w-full flex flex-col sm:flex-row justify-center items-center sm:justify-center border-b-navbar border-lsq-gray-light">
        <NavLink href="/">Home</NavLink>
        <div class="sm:h-4 sm:w-px w-4 h-px bg-lsq-gray-light"></div>
        <NavLink href="/issues/059">Current Issue</NavLink>
        <div class="sm:h-4 sm:w-px w-4 h-px bg-lsq-gray-light"></div>
        <NavLink href="/issues">Back Issues</NavLink>
        <div class="sm:h-4 sm:w-px w-4 h-px bg-lsq-gray-light"></div>
        <NavLink href="/submissions">Submissions</NavLink>
        <div class="sm:h-4 sm:w-px w-4 h-px bg-lsq-gray-light"></div>
        <NavLink href="/changes">Recent Changes</NavLink>
        <div class="sm:h-4 sm:w-px w-4 h-px bg-lsq-gray-light"></div>
        <NavLink href="/support-us">Support Us</NavLink>
        <div class="sm:h-4 sm:w-px w-4 h-px bg-lsq-gray-light"></div>
        <NavLink href="/contact-us">Contact Us</NavLink>
        <div class="sm:h-4 sm:w-px w-4 h-px bg-lsq-gray-light"></div>
        <!-- Test Dropdown Menu Start -->
        <Dropdown class="group">
          <li class="inline text-center">
            <button class="flex items-center">
              <NavLink href="#">Test Menu</NavLink>
              <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="w-3 h-3 mt-0.5 last:mr-4 group-open:rotate-180">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative text-left">
              <div class="sm:absolute static sm:top-0 sm:w-max bg-lsq-white sm:shadow shadow-lsq-gray-light w-full">
                <ul class="flex flex-col justify-center items-center">
                  <div class="sm:w-full w-4 h-px bg-lsq-gray-light"></div>
                  <DropdownLink href="#">Test Link</DropdownLink>
                  <div class="sm:w-full w-4 h-px bg-lsq-gray-light"></div>
                  <DropdownLink href="#">Test Link</DropdownLink>
                  <div class="sm:w-full w-4 h-px bg-lsq-gray-light"></div>
                  <DropdownLink href="#">Test Link</DropdownLink>
                </ul>
              </div>
            </DropdownItems>
          </li>
        </Dropdown>
        <!-- Test Dropdown Menu End -->
      </ul>
    </MenuItems>
  </navbar>
</Astronav>
